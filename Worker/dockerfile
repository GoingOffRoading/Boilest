FROM alpine
RUN apk add --no-cache python3 py3-pip ffmpeg sqlite
RUN pip install --no-cache-dir celery flower

RUN apk update
RUN apk upgrade

RUN mkdir -p /boil_watch
RUN mkdir -p /boil_hold
RUN mkdir -p /Boilest
RUN mkdir -p /Scripts
COPY /Scripts /Scripts
WORKDIR "/Scripts"

EXPOSE 80
EXPOSE 5555

#ENTRYPOINT [ "/bin/sh" ]
#CMD [ "/boilest/celery.sh" ]    

CMD ["celery", "-A", "tasks", "worker", "-l", "INFO"]

