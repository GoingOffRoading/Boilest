FROM alpine

RUN apk update
RUN apk upgrade
RUN apk add --no-cache ffmpeg

RUN apk add --no-cache python3 py3-pip
RUN pip install --no-cache-dir celery

RUN mkdir -p /boil_watch
RUN mkdir -p /boil_hold

RUN mkdir -p /boilest
COPY /scripts /boilest
WORKDIR "/boilest"

#ENTRYPOINT [ "/bin/sh" ]
#CMD [ "/boilest/celery.sh" ]    


CMD ["celery", "-A", "tasks.app", "worker", "-l", "INFO"]